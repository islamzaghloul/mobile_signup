<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="signup_layout_replace" inherit_id="auth_signup.fields" name="sign up layout">
            <xpath expr="//div[2]" position="after">
             <div class="form-group field-phone">
                <label for="phone" class="control-label">phone number</label>
                <input type="number" name="phone" t-att-value="phone" id="phone" class="form-control" required="required"/>
            </div>
        </xpath>
    </template>
</odoo>